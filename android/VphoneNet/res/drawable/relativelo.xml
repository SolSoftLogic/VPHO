<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/RLayout"
	android:layout_width="fill_parent"
  	android:layout_height="wrap_content"
  	android:padding="6dip">
  	<ImageView
        android:id="@+id/icon1"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="6dip"
        android:src="@drawable/icon"/>
 Â 	<TextView
		android:id="@+id/topline1"
		android:layout_width="wrap_content" 
    	android:layout_height="26dip"
    	android:layout_toRightOf="@id/icon1"
    	android:layout_alignTop="@id/icon1"
		android:singleLine="true"
		android:ellipsize="marquee"
		android:text="empty topline"/>
	<TextView
		android:id="@+id/bottomline1"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
    	android:layout_toRightOf="@id/icon1"
    	android:layout_alignBottom="@id/icon1"
    	android:layout_below="@+id/topline1"
    	android:layout_alignWithParentIfMissing="true"
		android:text="empty bottom line"/>
</RelativeLayout>
